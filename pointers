//All values are stored in memory
//Every location in memory has an address
//A pointer is a memory address

package main

import (
	"fmt"
)

func main() {
	a := 42

	//value
	fmt.Println(a)
	//address
	fmt.Println(&a)
	//type of value
	fmt.Printf("%T\n", a)
	//type of address
	fmt.Printf("%T\n", &a)

	var b *int = &a
	fmt.Println(b)

}

package main

import (
	"fmt"
)

func main() {
	a := 42

	//value
	fmt.Println(a)

	//pointer to address
	fmt.Println(&a)

	//type of value
	fmt.Printf("%T\n", a)

	//type of address
	fmt.Printf("%T\n", &a)

	b := &a
	fmt.Println(b)
	//dereference the value
	fmt.Println(*b) //* gives you the value stored at an address when you have the address
	fmt.Println(*&a)

}
