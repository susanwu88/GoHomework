//struct isa composite data type, aggregate values of different types

package main

import (
	"fmt"
)

type person struct {
	first string
	last  string
	age   int
}

func main() {

	p1 := person{
		first: "Jane",
		last:  "Bond",
		age:   35,
	}
	p2 := person{
		first: "Miss",
		last:  "Moneypenny",
		age:   27,
	}

	fmt.Println(p1)
	fmt.Println(p2)

	fmt.Println(p1.first, p1.last, p1.age)
	fmt.Println(p2.first, p2.last, p2.age)
}
//Embedded Structs

package main

import (
	"fmt"
)

type person struct {
	first string
	last  string
	age   int
}

type secretAgent struct {
	person
	ltk bool
}

func main() {

	sa1 := secretAgent{
		person: person{
			first: "Jane",
			last:  "Bond",
			age:   35,
		},
		ltk: true,
	}

	p2 := person{
		first: "Miss",
		last:  "Moneypenny",
		age:   27,
	}

	fmt.Println(sa1)
	fmt.Println(p2)

	fmt.Println(sa1.first, sa1.last, sa1.age, sa1.ltk)
	fmt.Println(p2.first, p2.last, p2.age)
}


//Anonymous struct, no defined type

package main

import (
	"fmt"
)

func main() {

	p1 := struct {
		first string
		last  string
		age   int
	}{

		first: "Jane",
		last:  "Smith",
		age:   32,
	}

	fmt.Println(p1)

}
